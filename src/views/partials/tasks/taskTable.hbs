{{#if tasks}}
<table class="table table-bordered table-hover ">
    <thead>
        <tr>
            <th>N.</th>
            <th>Tittle</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>
                {{tittle}}
            </td>
            <td>{{description}}</td>
            <td>
                {{#if done}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">Undone</a>
                {{else}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Done</a>
                {{/if}}

                <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
                <a href="/tasks/{{_id}}/edit" class="btn btn-warning text-white">Update</a>
            </td>
        </tr>
        {{else}}

        {{/each}}
    </tbody>
</table>
{{else }}
<div class="text-center">
    <h1>No hay mensajes</h1>
    <img>
</div>
{{/if}}