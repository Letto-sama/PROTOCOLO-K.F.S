{{#if tasks}}
<table class="table table-light table-bordered rounded-2 table-hover ">
    <thead>
        <tr>
            <th>N.</th>
            <th>Familiar</th>
            <th>Mensaje</th>
            <th>Ubicación</th>
            <th>Opciones</th>

        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>
                {{tittle}}
            </td>
            <td>{{description}}</td>
            <td>{{description2}}</td>
            <td>
                {{#if done}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Leido</a>
                {{else}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">No leído</a>
                {{/if}}

                {{!-- <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
                <a href="/tasks/{{_id}}/edit" class="btn btn-warning text-white">Update</a> --}}
            </td>
        </tr>
        {{else}}

        {{/each}}
    </tbody>
</table>
{{else }}
<div class="text-center">
    <h1>No hay mensajes</h1>
    <img>
</div>
{{/if}}